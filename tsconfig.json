{
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "es6",
		"module": "ES6",
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist/esm",
		"sourceMap": true
	}
}
